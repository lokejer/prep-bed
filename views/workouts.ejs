<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- DM Sans font -->
  <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap" rel="stylesheet">

  <!-- link bootstrap / bs icons / bs js -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  
  <!-- link stylesheets -->
  <!-- NOTE: ../public/style/css is wrong, since app.use(express.static("public")) makes public the Root folder -->
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="/workouts.css">
  <script defer src="/js/workouts.js"></script>

  <title>Workouts</title>
</head>
<body data-bs-theme="dark">

  <main>

    <section class="mt-5 container-md">

      <!-- page header -->
      <div class="d-flex justify-content-between align-items-center">
        <h1 class="flex-wrap">Your&nbsp;Workouts</h1>
        <a class="create-workout-btn flex-wrap p-2 rounded-3 shadow-sm text-decoration-none text-primary bg-accent" href="/workouts/new">
          <i class="bi bi-plus me-1"></i><span class="d-none d-md-inline">NEW&nbsp;WORKOUT</span>
        </a>
      </div>

      <hr class="mb-4" style="border-width: 3px;">
      
      <!-- message if no workouts yet -->
      <% if (workouts.length === 0) { %>
        <div id="noWorkoutsMessage" class="d-flex flex-column justify-content-center align-items-center rounded-2">
          <h4 class="fs-3">no workouts yet... :&#40;</h4>
          <a class="create-workout-btn p-2 border rounded-3 shadow-sm text-decoration-none text-secondary" href="/workouts/new">
            <i class="bi bi-plus me-1"></i>Add Workout
          </a>
        </div>
      <% } %>
      
      <!-- workout section header -->
      <div class="workouts-container">

        <% workouts.forEach(w => { %>

          <div class="mt-1 mb-3 p-3 shadow-lg workout-card">
            
            <!-- each workout's header -->
            <h3 class="display-6">Workout on <%= w.date %>
              <form class="ms-auto d-inline float-end delete-workout-btn" action="/workouts/<%= w.id %>?_method=DELETE" method="POST">
                <button type="submit"><i class="bi bi-x text-primary"></i></button>
              </form>
            </h3>

            <% w.exercises.forEach((exercise, exerciseIndex) => { %>

              <!-- exercise header -->
              <h4 class="fw-normal"><%= exercise.name %> 
                <span class="text-secondary fs-6">
                  (
                    <%= exercise.weight %>
                    <%= exercise.weight === "BW" ? "" : "kg" %>
                  )
                </span>
                <form class="d-inline" action="/workouts/<%= w.id %>/edit-exercise/<%= exerciseIndex %>?_method=PUT" method="POST">
                  
                  <!-- button opens the edit exercise modal -->
                  <button 
                    type="button" 
                    class="edit-exercise-btn px-2 py-1 rounded-circle" 
                    data-bs-toggle="modal" 
                    data-bs-target="#editExerciseModal"
                    data-workout-id="<%= w.id %>"
                    data-exercise-id="<%= exerciseIndex %>"
                    data-exercise-name="<%= exercise.name %>"
                    data-exercise-weight="<%= exercise.weight %>"
                    data-set1-reps="<%= exercise.sets[0] ? exercise.sets[0].reps : '' %>"
                    data-set2-reps="<%= exercise.sets[1] ? exercise.sets[1].reps : '' %>"
                    data-set3-reps="<%= exercise.sets[2] ? exercise.sets[2].reps : '' %>"
                  >
                    <i class="bi bi-pencil"></i>
                  </button>
                </form>

                <!-- button removes this exercise from this workout -->
                <form class="d-inline" action="/workouts/<%= w.id %>/edit-exercise/<%= exerciseIndex %>?_method=DELETE" method="POST">
                  <button class="delete-exercise-btn px-2 py-1 rounded-circle" type="submit"><i class="bi bi-trash3"></i></button>
                </form>
              </h4>

              <!-- exercise details (sets & reps) -->
              <ul>
                <% exercise.sets.forEach(set => { %>
                  <li>SET <%= set.setNumber %>: <strong><%= set.reps %> reps</strong></li>
                <% }) %>
              </ul>

            <% }) %>

          </div>

        <% }) %>

      </div>

      <!-- edit exercise modal -->
      <div class="modal fade" id="editExerciseModal" data-bs-theme="dark" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <form id="editExerciseForm" method="POST">
              <input type="hidden" name="_method" value="PUT">
              
              <div class="modal-header">
                <h5 class="modal-title">Edit Exercise</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
              </div>
              
              <div class="modal-body">

                <div class="mb-3">
                  <label class="form-label">Exercise Name</label>
                  <input type="text" class="form-control" id="exerciseName" name="name">
                </div>

                <div class="mb-3">
                  <label class="form-label">Weight (kg)</label>
                  <input type="text" class="form-control" id="exerciseWeight" name="weight">
                </div>

                <div class="mb-3">
                  <label class="form-label">Set 1</label>
                  <input type="number" class="form-control" id="set1Reps" name="set1">
                </div>

                <div class="mb-3">
                  <label class="form-label">Set 2</label>
                  <input type="number" class="form-control" id="set2Reps" name="set2">
                </div>

                <div class="mb-3">
                  <label class="form-label">Set 3</label>
                  <input type="number" class="form-control" id="set3Reps" name="set3">
                </div>
                              
              </div>
              
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
              </div>
            </form>
          </div>
        </div>
      </div>

    </section>

  </main>
</body>
</html>