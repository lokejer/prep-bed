<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- DM Sans font -->
  <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap" rel="stylesheet">

  <!-- link bootstrap / bs icons / bs js -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

  <!-- link stylesheets -->
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="/login.css">

  <title>Home</title>
</head>
<body data-bs-theme="dark">
  
  <main>
    <section class="container-md">
      <div class="form-container min-vh-100 py-3 pb-5 d-flex flex-column justify-content-center align-items-center">
        <h1 class="mb-3">Login</h1>

        <form id="loginForm" class="col-lg-4 col-sm-5 col-12 d-flex flex-column align-items-center" action="/login" method="POST">

          <!-- username -->
          <div class="input-group mb-3 d-flex flex-column position-relative">
            <label for="username">Username</label>
            <input id="username" type="text" placeholder="johndoe55" required>
            <div class="validation-indicator position-absolute bottom-0 end-0 p-2">
              <i class="bi bi-check-circle valid-icon"></i>
            </div>
          </div>

          <!-- email -->
          <div class="input-group mb-3 d-flex flex-column position-relative">
            <label for="email">Email</label>
            <input id="email" type="email" placeholder="johndoe@gmail.com" required>
            <div class="validation-indicator position-absolute bottom-0 end-0 p-2">
              <i class="bi bi-check-circle valid-icon"></i>
            </div>
          </div>

          <!-- password -->
          <div class="input-group mb-3 d-flex flex-column position-relative">
            <label for="password">Password</label>
            <input id="password" type="password" placeholder="*********" required>
            <div class="validation-indicator position-absolute bottom-0 end-0 p-2">
              <i class="bi bi-check-circle valid-icon"></i>
            </div>
          </div>

          <button class="submit-btn mt-3 px-3 py-1 rounded-2 shadow-sm" type="submit">SUBMIT</button>

        </form>
      </div>
    </section>
  </main>

  <script>
    const inputs = document.querySelectorAll('#loginForm input');
    const firstInputField = document.querySelector('#loginForm input');
    firstInputField.focus();
    
    inputs.forEach(input => {
      const indicator = input.parentElement.querySelector('.validation-indicator');
      const icon = indicator.querySelector('i'); // gets the first <i> inside
      
      input.addEventListener('input', () => {
        if (input.checkValidity()) {
          icon.classList.remove('bi-check-circle');
          icon.classList.add('bi-check-circle-fill');
          icon.style.color = 'green';
          icon.style.opacity = 1;
        } else {
          icon.classList.remove('bi-check-circle-fill');
          icon.classList.add('bi-check-circle');
          icon.style.color = '';
          icon.style.opacity = 0.2;
        };
      });
    });
  </script>
</body>
</html>
